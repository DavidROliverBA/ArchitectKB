{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vault.local/schemas/workstream.schema.json",
  "title": "Workstream Note",
  "description": "Schema for Workstream event type - Project sub-division.",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "Workstream",
      "description": "Note type identifier"
    },
    "pillar": {
      "type": "string",
      "const": "event",
      "description": "Ontology pillar"
    },
    "title": {
      "type": "string",
      "description": "Workstream name"
    },
    "project": {
      "type": ["string", "null"],
      "pattern": "^\\[\\[.+\\]\\]$",
      "description": "Parent project"
    },
    "status": {
      "type": ["string", "null"],
      "enum": ["active", "paused", "completed", null]
    },
    "description": {
      "type": ["string", "null"]
    },
    "nodeRelationships": {
      "type": "array",
      "items": { "type": "string", "pattern": "^\\[\\[.+\\]\\]$" },
      "default": []
    },
    "entityRelationships": {
      "type": "array",
      "items": { "type": "string", "pattern": "^\\[\\[.+\\]\\]$" },
      "default": []
    },
    "created": {
      "type": ["string", "null"]
    },
    "modified": {
      "type": ["string", "null"]
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    }
  },
  "required": ["type", "pillar", "title"],
  "additionalProperties": true
}
