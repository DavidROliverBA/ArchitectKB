{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vault.local/schemas/article.schema.json",
  "title": "Article Note",
  "description": "Schema for Article note type in Obsidian vault",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "Article",
      "description": "Note type identifier"
    },
    "articleType": {
      "type": "string",
      "enum": [
        "article",
        "blog-post",
        "document",
        "guardrail",
        "video",
        "podcast",
        "linkedin-post"
      ]
    },
    "platform": {
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "medium",
        "substack",
        "confluence",
        "linkedin",
        "youtube",
        "spotify",
        "internal"
      ]
    },
    "targetAudience": {
      "type": "string",
      "enum": [
        "internal",
        "external",
        "both"
      ]
    },
    "parentIdea": {
      "type": [
        "string",
        "null"
      ],
      "pattern": "^\\[\\[.+\\]\\]$"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "ready",
        "published",
        "archived"
      ]
    },
    "publishedUrl": {
      "type": [
        "string",
        "null"
      ]
    },
    "publishedDate": {
      "type": [
        "string",
        "null"
      ]
    },
    "summary": {
      "type": [
        "string",
        "null"
      ]
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "confidence": {
      "type": "string"
    },
    "freshness": {
      "type": "string"
    },
    "source": {
      "type": "string"
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "reviewed": {
      "type": [
        "string",
        "null"
      ]
    },
    "relatedTo": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^\\[\\[.+\\]\\]$"
      },
      "default": []
    }
  },
  "required": [
    "type"
  ],
  "additionalProperties": true
}