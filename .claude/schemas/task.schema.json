{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vault.local/schemas/task.schema.json",
  "title": "Task Note",
  "description": "Schema for Task note type in Obsidian vault",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "Task",
      "description": "Note type identifier"
    },
    "completed": {
      "type": "boolean",
      "default": false
    },
    "priority": {
      "type": "string",
      "enum": [
        "high",
        "medium",
        "low"
      ]
    },
    "doDate": {
      "type": "string"
    },
    "dueBy": {
      "type": "string"
    },
    "project": {
      "type": [
        "string",
        "null"
      ],
      "pattern": "^\\[\\[.+\\]\\]$"
    },
    "assignedTo": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "parentTask": {
      "type": [
        "string",
        "null"
      ],
      "pattern": "^\\[\\[.+\\]\\]$"
    },
    "subtasks": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    }
  },
  "required": [
    "type"
  ],
  "additionalProperties": true
}