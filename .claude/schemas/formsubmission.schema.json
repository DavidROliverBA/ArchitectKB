{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vault.local/schemas/formsubmission.schema.json",
  "title": "FormSubmission Note",
  "description": "Schema for FormSubmission note type in Obsidian vault",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "FormSubmission",
      "description": "Note type identifier"
    },
    "formType": {
      "type": "string",
      "enum": [
        "DPIA",
        "CyberRisk",
        "TPRM",
        "IAF",
        "ChangeRequest",
        "Other"
      ]
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "submitted",
        "pending",
        "approved",
        "rejected",
        "expired"
      ]
    },
    "project": {
      "type": [
        "string",
        "null"
      ],
      "pattern": "^\\[\\[.+\\]\\]$"
    },
    "requestingTeam": {
      "type": "string"
    },
    "submittedDate": {
      "type": "string"
    },
    "responseDate": {
      "type": "string"
    },
    "expiryDate": {
      "type": "string"
    },
    "referenceNumber": {
      "type": "string"
    },
    "attachments": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    }
  },
  "required": [
    "type"
  ],
  "additionalProperties": true
}