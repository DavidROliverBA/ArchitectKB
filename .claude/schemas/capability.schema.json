{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vault.local/schemas/capability.schema.json",
  "title": "Capability Note",
  "description": "Schema for Capability note type - What we can do. Skills, abilities.",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "Capability",
      "description": "Note type identifier"
    },
    "pillar": {
      "type": "string",
      "const": "node",
      "description": "Ontology pillar"
    },
    "title": {
      "type": "string",
      "description": "Capability title"
    },
    "capabilityType": {
      "type": ["string", "null"],
      "enum": ["technical", "business", "operational", null],
      "description": "Category of capability"
    },
    "maturity": {
      "type": ["string", "null"],
      "enum": ["emerging", "developing", "established", "declining", null],
      "description": "Maturity level"
    },
    "description": {
      "type": ["string", "null"]
    },
    "nodeRelationships": {
      "type": "array",
      "items": { "type": "string", "pattern": "^\\[\\[.+\\]\\]$" },
      "default": []
    },
    "entityRelationships": {
      "type": "array",
      "items": { "type": "string", "pattern": "^\\[\\[.+\\]\\]$" },
      "default": [],
      "description": "Systems that provide this capability"
    },
    "confidence": {
      "type": ["string", "null"],
      "enum": ["high", "medium", "low", null]
    },
    "freshness": {
      "type": ["string", "null"],
      "enum": ["current", "recent", "stale", null]
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "reviewed": {
      "type": ["string", "null"]
    },
    "created": {
      "type": ["string", "null"]
    },
    "modified": {
      "type": ["string", "null"]
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    }
  },
  "required": ["type", "pillar", "title"],
  "additionalProperties": true
}
