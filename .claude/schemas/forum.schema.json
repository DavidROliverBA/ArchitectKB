{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vault.local/schemas/forum.schema.json",
  "title": "Forum Note",
  "description": "Schema for Forum event type - Recurring meeting series.",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "Forum",
      "description": "Note type identifier"
    },
    "pillar": {
      "type": "string",
      "const": "event",
      "description": "Ontology pillar"
    },
    "title": {
      "type": "string",
      "description": "Forum name"
    },
    "frequency": {
      "type": ["string", "null"],
      "enum": ["weekly", "fortnightly", "monthly", "quarterly", null]
    },
    "description": {
      "type": ["string", "null"]
    },
    "nodeRelationships": {
      "type": "array",
      "items": { "type": "string", "pattern": "^\\[\\[.+\\]\\]$" },
      "default": [],
      "description": "Topics covered"
    },
    "entityRelationships": {
      "type": "array",
      "items": { "type": "string", "pattern": "^\\[\\[.+\\]\\]$" },
      "default": [],
      "description": "Regular attendees"
    },
    "created": {
      "type": ["string", "null"]
    },
    "modified": {
      "type": ["string", "null"]
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    }
  },
  "required": ["type", "pillar", "title"],
  "additionalProperties": true
}
