{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vault.local/schemas/adr.schema.json",
  "title": "ADR Note",
  "description": "Schema for ADR note type in Obsidian vault",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "ADR",
      "description": "Note type identifier"
    },
    "status": {
      "type": "string",
      "enum": [
        "draft",
        "proposed",
        "accepted",
        "deprecated",
        "superseded"
      ]
    },
    "adrType": {
      "type": "string",
      "enum": [
        "Technology_ADR",
        "Architecture_ADR",
        "Integration_ADR",
        "Security_ADR",
        "Data_ADR",
        "AI_ADR"
      ]
    },
    "description": {
      "type": [
        "string",
        "null"
      ]
    },
    "project": {
      "type": [
        "string",
        "null"
      ]
    },
    "jiraTicket": {
      "type": [
        "string",
        "null"
      ]
    },
    "deciders": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "approvers": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "stakeholders": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "source": {
      "type": ["string", "null"],
      "enum": [
        "local",
        "confluence",
        null
      ],
      "description": "Where ADR originated"
    },
    "sourcePageId": {
      "type": "string"
    },
    "sourceSpace": {
      "type": "string"
    },
    "sourceUrl": {
      "type": "string"
    },
    "sourceVersion": {
      "type": "string"
    },
    "isPublished": {
      "type": "string"
    },
    "publishedDate": {
      "type": "string"
    },
    "publishedUrl": {
      "type": "string"
    },
    "lastSynced": {
      "type": "string"
    },
    "readOnly": {
      "type": "string"
    },
    "authority": {
      "type": "string",
      "enum": [
        "draft",
        "local",
        "team",
        "organizational"
      ]
    },
    "relatedTo": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^\\[\\[.+\\]\\]$"
      },
      "default": []
    },
    "supersedes": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^\\[\\[.+\\]\\]$"
      },
      "default": []
    },
    "dependsOn": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^\\[\\[.+\\]\\]$"
      },
      "default": []
    },
    "contradicts": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "summary": {
      "type": [
        "string",
        "null"
      ]
    },
    "keywords": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "confidence": {
      "type": "string",
      "enum": [
        "high",
        "medium",
        "low"
      ]
    },
    "freshness": {
      "type": "string",
      "enum": [
        "current",
        "recent",
        "stale"
      ]
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "reviewed": {
      "type": [
        "string",
        "null"
      ]
    },
    "aiProvider": {
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "aws-bedrock",
        "azure-openai",
        "openai",
        "google",
        "anthropic",
        "custom"
      ]
    },
    "aiModel": {
      "type": "string"
    },
    "aiUseCase": {
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "generation",
        "classification",
        "extraction",
        "conversation",
        "agents"
      ]
    },
    "aiRiskLevel": {
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "high",
        "medium",
        "low"
      ]
    },
    "ethicsReviewed": {
      "type": "boolean",
      "default": false
    },
    "biasAssessed": {
      "type": "boolean",
      "default": false
    },
    "dataPrivacyReviewed": {
      "type": "boolean",
      "default": false
    },
    "humanOversight": {
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "full",
        "partial",
        "minimal",
        "none"
      ]
    }
  },
  "required": [
    "type"
  ],
  "additionalProperties": true
}