{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vault.local/schemas/concept.schema.json",
  "title": "Concept Note",
  "description": "Schema for Concept note type - What is X? Definitions, explanations.",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "Concept",
      "description": "Note type identifier"
    },
    "pillar": {
      "type": "string",
      "const": "node",
      "description": "Ontology pillar"
    },
    "title": {
      "type": "string",
      "description": "Concept title"
    },
    "description": {
      "type": ["string", "null"],
      "description": "Brief explanation"
    },
    "aliases": {
      "type": "array",
      "items": { "type": "string" },
      "default": [],
      "description": "Alternative names for wiki-links"
    },
    "keywords": {
      "type": "array",
      "items": { "type": "string" },
      "default": [],
      "description": "Searchable terms"
    },
    "nodeRelationships": {
      "type": "array",
      "items": { "type": "string", "pattern": "^\\[\\[.+\\]\\]$" },
      "default": [],
      "description": "Related concepts, patterns"
    },
    "entityRelationships": {
      "type": "array",
      "items": { "type": "string", "pattern": "^\\[\\[.+\\]\\]$" },
      "default": [],
      "description": "Systems, people this relates to"
    },
    "summary": {
      "type": ["string", "null"],
      "description": "One-line summary"
    },
    "confidence": {
      "type": ["string", "null"],
      "enum": ["high", "medium", "low", null]
    },
    "freshness": {
      "type": ["string", "null"],
      "enum": ["current", "recent", "stale", null]
    },
    "source": {
      "type": ["string", "null"],
      "enum": ["primary", "secondary", "synthesis", "external", null]
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "reviewed": {
      "type": ["string", "null"],
      "description": "Date last reviewed (YYYY-MM-DD)"
    },
    "created": {
      "type": ["string", "null"]
    },
    "modified": {
      "type": ["string", "null"]
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    }
  },
  "required": ["type", "pillar", "title"],
  "additionalProperties": true
}
