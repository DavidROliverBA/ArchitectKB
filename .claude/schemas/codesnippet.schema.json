{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vault.local/schemas/codesnippet.schema.json",
  "title": "CodeSnippet Note",
  "description": "Schema for CodeSnippet note type in Obsidian vault",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "CodeSnippet",
      "description": "Note type identifier"
    },
    "language": {
      "type": "string",
      "enum": [
        "python",
        "javascript",
        "bash",
        "yaml",
        "sql",
        "other"
      ]
    },
    "purpose": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "required": [
    "type"
  ],
  "additionalProperties": true
}