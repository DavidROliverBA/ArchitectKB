{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vault.local/schemas/person.schema.json",
  "title": "Person Note",
  "description": "Schema for Person note type in Obsidian vault",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "Person",
      "description": "Note type identifier"
    },
    "role": {
      "type": [
        "string",
        "null"
      ]
    },
    "organisation": {
      "type": [
        "string",
        "null"
      ],
      "pattern": "^\\[\\[.+\\]\\]$"
    },
    "emailAddress": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "required": [
    "type"
  ],
  "additionalProperties": true
}