{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vault.local/schemas/course.schema.json",
  "title": "Course Note",
  "description": "Schema for Course note type in Obsidian vault",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "Course",
      "description": "Note type identifier"
    },
    "status": {
      "type": "string",
      "enum": [
        "not-started",
        "in-progress",
        "completed"
      ]
    },
    "provider": {
      "type": [
        "string",
        "null"
      ]
    },
    "url": {
      "type": [
        "string",
        "null"
      ]
    },
    "completedDate": {
      "type": [
        "string",
        "null"
      ]
    }
  },
  "required": [
    "type"
  ],
  "additionalProperties": true
}