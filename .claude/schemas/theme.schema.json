{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vault.local/schemas/theme.schema.json",
  "title": "Theme Note",
  "description": "Schema for Theme note type - Cross-cutting concerns.",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "Theme",
      "description": "Note type identifier"
    },
    "pillar": {
      "type": "string",
      "const": "node",
      "description": "Ontology pillar"
    },
    "title": {
      "type": "string",
      "description": "Theme title"
    },
    "scope": {
      "type": ["string", "null"],
      "enum": ["enterprise", "department", "project", null],
      "description": "Scope of theme applicability"
    },
    "description": {
      "type": ["string", "null"]
    },
    "keywords": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    },
    "nodeRelationships": {
      "type": "array",
      "items": { "type": "string", "pattern": "^\\[\\[.+\\]\\]$" },
      "default": []
    },
    "entityRelationships": {
      "type": "array",
      "items": { "type": "string", "pattern": "^\\[\\[.+\\]\\]$" },
      "default": []
    },
    "confidence": {
      "type": ["string", "null"],
      "enum": ["high", "medium", "low", null]
    },
    "freshness": {
      "type": ["string", "null"],
      "enum": ["current", "recent", "stale", null]
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "reviewed": {
      "type": ["string", "null"]
    },
    "created": {
      "type": ["string", "null"]
    },
    "modified": {
      "type": ["string", "null"]
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "default": []
    }
  },
  "required": ["type", "pillar", "title"],
  "additionalProperties": true
}
