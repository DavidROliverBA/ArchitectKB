{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vault.local/schemas/dashboard.schema.json",
  "title": "Dashboard Note",
  "description": "Schema for Dashboard note type in Obsidian vault",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "Dashboard",
      "description": "Note type identifier"
    },
    "refreshed": {
      "type": [
        "string",
        "null"
      ],
      "format": "date",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    }
  },
  "required": [
    "type"
  ],
  "additionalProperties": true
}