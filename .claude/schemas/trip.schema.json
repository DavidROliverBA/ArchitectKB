{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://vault.local/schemas/trip.schema.json",
  "title": "Trip Note",
  "description": "Schema for Trip note type in Obsidian vault",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "Trip",
      "description": "Note type identifier"
    },
    "status": {
      "type": "string",
      "enum": [
        "idea",
        "planning",
        "booked",
        "completed",
        "cancelled"
      ]
    },
    "tripType": {
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "holiday",
        "city-break",
        "adventure",
        "family-visit",
        "business"
      ]
    },
    "destination": {
      "type": [
        "string",
        "null"
      ]
    },
    "country": {
      "type": [
        "string",
        "null"
      ]
    },
    "startDate": {
      "type": "string"
    },
    "endDate": {
      "type": "string"
    },
    "travellers": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "budget": {
      "type": [
        "string",
        "null"
      ]
    },
    "currency": {
      "type": "string",
      "enum": [
        "GBP",
        "EUR",
        "USD"
      ]
    },
    "accommodation": {
      "type": [
        "string",
        "null"
      ]
    },
    "flights": {
      "type": [
        "string",
        "null"
      ]
    },
    "notes": {
      "type": [
        "string",
        "null"
      ]
    },
    "notionPageId": {
      "type": "string"
    },
    "notionUrl": {
      "type": "string"
    },
    "lastSynced": {
      "type": "string"
    },
    "syncStatus": {
      "type": ["string", "null"],
      "enum": [
        "untracked",
        "unsynced",
        "synced",
        "local-ahead",
        "remote-ahead",
        "conflict",
        null
      ],
      "description": "Notion sync status"
    }
  },
  "required": [
    "type"
  ],
  "additionalProperties": true
}