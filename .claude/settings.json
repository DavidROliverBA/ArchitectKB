  },
  "permissions": {
    "allow": [
      "Bash(node scripts/*)",
      "Bash(npm run *)",
      "Bash(python3 scripts/*)",
      "Bash(python3 .claude/hooks/*)",
      "Bash(sqlite3 .data/*)",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git branch*)",
      "Bash(git checkout*)",
      "Bash(git show*)",
